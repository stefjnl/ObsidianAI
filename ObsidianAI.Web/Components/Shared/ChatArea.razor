@using ObsidianAI.Web.Models
@using ObsidianAI.Web.Components.Shared

<div class="chat-area">
    @if (Messages.Any())
    {
        @foreach (var message in Messages)
        {
            <MessageBubble Message="@message" OnActionConfirmed="OnActionConfirmed"
                OnActionCancelled="OnActionCancelled" OnActionEdit="OnActionEdit" />
        }
    }
    else
    {
        <div class="welcome-message">
            <p>Welcome to Obsidian AI! How can I help you today?</p>
        </div>
    }
</div>

@code {
    [Parameter]
    public List<ChatMessage> Messages { get; set; } = new();

    [Parameter]
    public EventCallback<string> OnActionConfirmed { get; set; }

    [Parameter]
    public EventCallback<string> OnActionCancelled { get; set; }

    [Parameter]
    public EventCallback<string> OnActionEdit { get; set; }
}